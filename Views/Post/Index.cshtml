@model List<Blog.Models.Post>

<h2>Lista dos Posts</h2>

<hr />

<a href="/post">Listar Todos</a>

<hr />
<a href="/post/novo">Adicionar Novo</a>

<hr />

<style>

    table { }
    tr { }

    th {
        background-color: darkcyan;
    }

    td, th {
        padding: 5px;
        border: 1px solid darkcyan;
    }
</style>

<table>
    <thead>
        <tr>
            <th>TÍTULO</th>
            <th>RESUMO</th>
            <th>CATEGORIA</th>
            <th>DATA PUBLICAÇÃO</th>
            <th>AÇÃO</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model)
        {
        <tr>
            <td><a href="/post/visualizar/@p.Id"> <strong>@p.Titulo</strong> </a></td>
            <td> @p.Resumo </td>
            <td> <a href="/post/categoria/@p.Categoria">@p.Categoria</a> </td>
            <td>

                @if (p.Publicado == true)
                {
                    @p.DataPublicacao
                }
                else
                {
                <strong>Não Publicado</strong>
                }

            </td>
            <td>
                
                <a href="/post/excluir/@p.Id">Excluir o ID #@p.Id</a>

                <br />

                @if(p.Publicado == false)
                {
                    <a href="/post/publicar/@p.Id">Publicar o ID #@p.Id</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>



